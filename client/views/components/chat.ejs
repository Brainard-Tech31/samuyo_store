
<div class="floating-chat">
    <!-- Chat icon or button -->
    <button id="chatToggle" class="chat-toggle">
      <p class="text-white">Chat Us <i class="fas fa-arrow-down"
          style="background-color: #250f16;padding:10px 10px; border-radius:50px;margin-left:5px"></i></p>
    </button>

    <!-- Chat box -->
    <div id="chatBox" class="chat-box" target="">
      <div class="w-full p-4 mt-4 rounded-lg shadow sm:p-6 md:p-8"
        style="background-image: linear-gradient(to right, #1a1c1b, #3f1325);width: 350px !important;height: 500px;position: relative;overflow-y: auto;">
        <iframe name="myFrame" id="myFrame" width="0px" height="0px"></iframe>
        <form class="space-y-6" action="/submit_contact" method="post" target="myFrame"
          onsubmit="return validateForm()">
          <h1 class="text-white bold font-bold">Chat Us </h1>
          <input name="name" id="name" class="text-sm rounded-lg p-5 w-full font-bold" placeholder="Name"
           />
          <input name="email" id="email" class="text-sm rounded-lg p-5 w-full font-bold" placeholder="Email"
             />
          <textarea name="message" id="message" class="text-sm rounded-lg p-5 w-full"
            placeholder="Type your message here" ></textarea>
          <p class="text-white bold font-bold" id="success_message" style="display: none;">Message sent
            successfully</p>
          <button type="submit" class="w-full text-white font-medium rounded-lg text-sm px-5 py-4 text-center"
            style="background: linear-gradient(to right, #e30047, #e30047); box-shadow: 0 4px 6px rgba(30, 114, 87, 0.1);">
            Send
          </button>
        </form>

      </div>
    </div>


  </div>
  <script >
     // Get references to the button and chat box
  const chatToggleBtn = document.getElementById('chatToggle');
  const chatBox = document.getElementById('chatBox');

  // Add click event listener to the button
  chatToggleBtn.addEventListener('click', () => {
    // Toggle the visibility of the chat box
    chatBox.style.display = chatBox.style.display === 'none' ? 'block' : 'none';
  });

  </script>